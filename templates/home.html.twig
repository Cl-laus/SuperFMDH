{% extends 'base.html.twig' %}
{% block title %}
    Accueil
{% endblock %}
{% block
content %}
    <main>
        <span class="error"><!-- affiche un message d'erreur si on a pas les droits d'acces -->
        </span>

        <div id="articles-page">
            <section>
                <h2>
                    Nos annonces de maison
                </h2>
                <div id="house-container">
                    {% for product in products %}
                              {% if product.propertyType.name == 'house' %}
                {% include '_partials/_card.html.twig' %}
            {% endif %}
                    {% endfor %}
                </div>
            </section>
            <section>
                <h2>
                    Nos annonces d'appartement
                </h2>
                <div id="apartment-container">
                    {% for product in products %}
                          {% if product.propertyType.name == 'apartment' %}
                {% include '_partials/_card.html.twig' %}
            {% endif %}
                    {% endfor %}
                </div>
            </section>
        </div>
    </main>
{% endblock %}
