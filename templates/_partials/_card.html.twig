<article>
	<header>
		<img src="{{ product.imageUrl }}" alt=""/>
		<p class="type">
			{{ product.transactionType.name }}

		</p>
	</header>
	<div class="title">
		<h3>
			{{ product.title }}
		</h3>
		<p class="price">
			{{ product.price }}
		</p>
	</div>
	<p class="location">
		{{ product.city }}
	</p>
	<p class="description">
		{{ product.description }}
	</p>
	<div id="button-container">
		<div>
			<a href="" class="link">
				Favori
			</a>
		</div>

		<div>
			<a href="{{ path('listing_edit', {'id': product.id }) }}" class="link">
				Modifier
			</a>
		</div>

		<form action="{{ path('listing_delete', {'id': product.id })}}" method="post">
			<input type="hidden" name="_token" value="{{csrf_token ('delete-listing'~ product.id) }}">
			<button class="link" type="submit">Supprimer</button>
		</form>

	</div>

	<div id="contact-container">
		<a id="contact-link" href="{{ path('listing_show', {'id': product.id }) }}" class="link">
			Contact
		</a>
	</div>
</article>
